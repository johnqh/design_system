{
  "name": "@johnqh/design_system",
  "version": "1.0.19",
  "description": "Design system library with tokens, colors, typography and variants",
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite build --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts --fix && tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "design-system",
    "tokens",
    "typography",
    "colors",
    "variants",
    "typescript"
  ],
  "author": "John Q Huang",
  "type": "module",
  "peerDependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitest/coverage-v8": "^3.2.4",
    "clsx": "^2.1.1",
    "eslint": "^9.36.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "tailwind-merge": "^3.3.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/johnqh/design-system.git"
  },
  "bugs": {
    "url": "https://github.com/johnqh/design-system/issues"
  },
  "homepage": "https://github.com/johnqh/design-system#readme"
}
