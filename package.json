{
  "name": "@johnqh/design-system",
  "version": "1.0.0",
  "description": "Platform-agnostic design system with tokens, colors, typography, and variants for web and React Native",
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite build --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "design-system",
    "design-tokens",
    "colors",
    "typography",
    "variants",
    "typescript",
    "cross-platform",
    "react-native",
    "web"
  ],
  "author": "John Q Huang",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.0.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.4",
    "vite-plugin-dts": "^3.0.0",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/johnqh/design-system.git"
  },
  "bugs": {
    "url": "https://github.com/johnqh/design-system/issues"
  },
  "homepage": "https://github.com/johnqh/design-system#readme"
}